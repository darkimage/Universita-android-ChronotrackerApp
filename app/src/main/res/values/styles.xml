<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <!--Material Theme Colors-->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorControlHighlight">@color/highlightColor</item>
        <item name="android:alertDialogTheme">@style/Theme.MaterialComponents.Dialog.Custom</item>

    </style>

    <style name="Theme.MaterialComponents.Toolbar" parent="AppTheme">
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Theme.MaterialComponents.Toolbar.Popup" parent="AppTheme">
        <item name="android:textColorPrimary">@color/dialogHeaderColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="colorControlHighlight">@color/highlightColor</item>
    </style>

    <style name="Theme.MaterialComponents.Dialog.Custom" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryDisabledColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@drawable/material_button_text_accent</item>
    </style>
</resources>
