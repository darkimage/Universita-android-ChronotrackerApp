<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <!--Material Theme Colors-->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorControlHighlight">@color/highlightColor</item>

    </style>

    <style name="Theme.MaterialComponents.Toolbar" parent="AppTheme">
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Theme.MaterialComponents.Toolbar.Popup" parent="AppTheme">
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="colorControlHighlight">@color/highlightColor</item>
    </style>
</resources>
