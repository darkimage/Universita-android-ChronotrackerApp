<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/TextAppearance.Compat.Notification.Title"
            tools:text="Notification title" />

        <TextView
            android:id="@+id/notification_last_lap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_text_title"
            style="@style/TextAppearance.Compat.Notification.Line2"
            android:text="@string/notification_last_lap" />

        <TextView
            android:id="@+id/notification_duration_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_last_lap"
            tools:text="Duration 00:00.72" />

        <TextView
            android:id="@+id/notification_current_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/notification_duration_item_text"
            android:layout_alignParentEnd="true"
            android:textSize="24sp"
            tools:text="00:02.34" />

    <TextView
        android:id="@+id/notification_no_laps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_last_lap"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        tools:text="No laps" />

</RelativeLayout>