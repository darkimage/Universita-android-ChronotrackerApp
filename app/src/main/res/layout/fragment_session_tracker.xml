<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="1dp"
    android:paddingTop="1dp"
    android:background="@color/primaryLightColor"
    android:elevation="4dp"
    android:orientation="horizontal"
    tools:context=".SessionTracker">

    <ImageButton
        android:id="@+id/tracker_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:src="@drawable/pause_to_start_anim" />

    <TextView
        android:id="@+id/tracker_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/primaryTextColor"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tracker_start_pause"
        tools:text="20:00"/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tracker_athlete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:layout_toRightOf="@id/tracker_time"
        tools:text="Un nome molto lungo"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tracker_lap"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/lap"
        android:layout_toLeftOf="@id/tracker_stop"
        tools:text="lap"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tracker_stop"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:textColor="@color/secondaryColor"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@string/stop"
        android:layout_alignParentRight="true"
        tools:text="stop"/>

</RelativeLayout>